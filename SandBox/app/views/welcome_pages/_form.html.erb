<%= form_for(@welcome_page) do |f| %>
  <% if @welcome_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@welcome_page.errors.count, "error") %> prohibited this welcome_page from being saved:</h2>

      <ul>
      <% @welcome_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
      <%=f.label :title %><br />
      <%=f.text_field :title %>
    </div>
    <%= f.fields_for :tag do |tag_f| %>
    <div class = "field">
      <%= tag_f.label :name, "tag name:" %>
      <%=tag_f.text_field :name %>
      <% unless tag_f.object.nil? || tag_f.object.new_record? %>
      <%= tag_f.label :_destroy, 'Remove:'%>
      <%= tag_f.check_box :_destroy%>
    <% end %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
